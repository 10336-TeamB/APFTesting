@model APFTestingUI.Areas.Administration.Models.AssessmentTaskManagement.EditAssessmentTask

@{
    ViewBag.Title = "Assessment Task Management - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Pilot Practical Assessment Task Details</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Assessment Task</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title) <em>*</em>
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @*@Html.ValidationMessageFor(model => model.Title)*@
        </div>
        <div class="clear"></div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Details) <em>*</em>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Details)
            @*@Html.ValidationMessageFor(model => model.Details)*@
        </div>
        <div class="clear"></div>


        <div class="editor-label">
            @Html.LabelFor(model => model.MaxScore) <em>*</em>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxScore)
            @*@Html.ValidationMessageFor(model => model.MaxScore)*@
        </div>
        <div class="clear"></div>


        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
