@model APFTestingUI.Areas.Administration.Models.AssessmentTaskManagement.CreateAssessmentTask

@{
    ViewBag.Title = "Assessment Task Management - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new Pilot Practical Assessment Task </h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create Assessment Task</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title) <em>*</em>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="clear"></div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Details) <em>*</em>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Details)
            @Html.ValidationMessageFor(model => model.Details)
        </div>
        <div class="clear"></div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxScore) <em>*</em>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxScore)
            @Html.ValidationMessageFor(model => model.MaxScore)
        </div>
        <div class="clear"></div>


        <p class="button-container">
            <input class="form-button" type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
