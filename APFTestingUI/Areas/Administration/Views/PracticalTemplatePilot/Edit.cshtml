@model APFTestingUI.Areas.Administration.Models.PracticalTemplatePilot.Edit

@{
    ViewBag.Title = "Edit Pilot Practical Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Pilot Practical Template</h1>
@using(Html.BeginForm()){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)
    @Html.HiddenFor(model => model.Id)

    <p>Select / Deselect tasks to include in the template.</p>
    
    <h3>Tasks currently in project</h3>
    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>Details</th>
                <th>Max score</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.CurrentTasks.Count; i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(model => model.CurrentTasks[i].Selected)
                        @Html.HiddenFor(model => model.CurrentTasks[i].Id)
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayFor(model => model.CurrentTasks[i].Title)
                            @Html.HiddenFor(model => model.CurrentTasks[i].Title)
                        </strong><br />
                        @Html.DisplayFor(model => model.CurrentTasks[i].Details)
                        @Html.HiddenFor(model => model.CurrentTasks[i].Details)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CurrentTasks[i].MaxScore)
                        @Html.HiddenFor(model => model.CurrentTasks[i].MaxScore)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <hr/>
    <h3>Task pool</h3>
    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>Details</th>
                <th>Max score</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.AvailableTasks.Count; i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(model => model.AvailableTasks[i].Selected)
                        @Html.HiddenFor(model => model.AvailableTasks[i].Id)
                    </td>
                    <td>
                        <strong>
                            @Html.DisplayFor(model => model.AvailableTasks[i].Title)
                            @Html.HiddenFor(model => model.AvailableTasks[i].Title)
                        </strong><br />
                        @Html.DisplayFor(model => model.AvailableTasks[i].Details)
                        @Html.HiddenFor(model => model.AvailableTasks[i].Details)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.AvailableTasks[i].MaxScore)
                        @Html.HiddenFor(model => model.AvailableTasks[i].MaxScore)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <p class="button-container">
            <input type="submit" value="Submit" class="form-button"/>
    </p>
}