@model APFTestingUI.Areas.Administration.Models.PracticalTemplatePilot.PilotTemplateDisplayItem

@{
    ViewBag.Title = "Pilot Practical Template Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pilot Practical Template</h1>

<h2>Active: @Model.IsActiveText</h2>

<h3>@ViewBag.displayMessage</h3>

<table>
    <thead>
        <tr>
            <th></th>
            <th>Details</th>
            <th>Max Score</th>
        </tr>
    </thead>
    <tbody>
        @{
            var rowNumber = 1;
        }
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@rowNumber</td>
                <td>
                    <strong>@task.Title</strong><br />
                    @task.Details
                </td>
                <td>@task.MaxScore</td>
            </tr>
            rowNumber++;
        }
    </tbody>
</table>
<br/>
<p class="button-container">
@Html.ActionLink("Back", "Index", new { }, new { @class = "form-button" })
@if (Model.AllowEditOrDelete) {
    @Html.ActionLink("Edit", "Edit", new { templateId = Model.Id }, new { @class = "form-button" });
    @Html.ActionLink("Delete", "Delete", new { templateId = Model.Id }, new { @class="form-button delete"});
}
    </p>
@section scripts {
    <script src="~/Scripts/administration.js"></script>
}
