@model APFTestingUI.Areas.Administration.Models.QuestionManagement.Display

@{
    ViewBag.Title = "DisplayPilot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DisplayPilot</h2>


<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.DisplayFor(model => model.Description)
</div>
<div class="clear"></div>

<div class="editor-label">
    @Html.LabelFor(model => model.Category) 
</div>
<div class="editor-field">
    @Html.DisplayFor(model => model.Category)
</div>
<div class="clear"></div>
   
<div>
    @{ string path = String.Format("~/QuestionImages/{0}", Model.ImagePath); }
    @if (Model.ImagePath != null)
    {
        <img src="@Url.Content(path)" alt="question image"/>
    }
</div>

<table>
    <thead>
        <tr>
            <th>Correct</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var answer in Model.Answers)
        {
            <tr>
                @if (answer.IsCorrect)
                {
                    <td>TRUE</td>
                }
                else
                {
                    <td>FALSE</td>
                }
                <td>
                    @answer.Description
                </td>
            </tr>
        }
    </tbody>
</table>


@Html.ActionLink("Home", "IndexPilot")






