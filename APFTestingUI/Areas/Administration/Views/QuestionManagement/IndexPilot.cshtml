@model APFTestingUI.Areas.Administration.Models.QuestionManagement.IndexPilot

@{
    ViewBag.Title = "IndexPilot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexPilot</h2>

<div>
    <a href='@Url.Action("CreatePilot")'>
        ADD
    </a>
</div>

<div>
    @if (Model.TheoryQuestions.Count() > 0)
    {
        <table>

            <thead>
                <tr>
                    <th>Activation</th>
                    <th>Description</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var question in Model.TheoryQuestions)
                {
                    <tr>
                        <td>
                            @{ string img = ""; }
                            @switch (question.IsActive)
                            {
                                case true:
                                    img = "Deactivate";
                                    break;
                                case false:
                                    img = "Activate";
                                    break;
                            }
                            <a href='@Url.Action("ToggleActivationPilot", new { questionId = question.Id })'>
                                @img
                            </a>
                        </td>
                        
                        @if (question.editableOrDeletable)
                        {
                            <td>
                                @Html.ActionLink(question.Description, "EditPilot", new { questionId = question.Id })
                            </td>
                        }
                        else
                        {
                            <td>@question.Description</td>
                        }
                        
                    </tr>
                }
            </tbody>

        </table>
    }
</div>
