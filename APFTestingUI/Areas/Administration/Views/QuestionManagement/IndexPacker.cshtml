@model APFTestingUI.Areas.Administration.Models.QuestionManagement.IndexPacker

@{
    ViewBag.Title = "IndexPacker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexPacker</h2>

<div>
    <a href='@Url.Action("CreatePacker")'>
        ADD
    </a>
</div>

<div>
    @if (Model.TheoryQuestions.Count() > 0)
    {
        <table>

            <thead>
                <tr>
                    <th>Activation</th>
                    <th>Description</th>
                    <th>Edit</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var question in Model.TheoryQuestions)
                {
                    <tr>
                        <td>
                            @{ string img = ""; }
                            @switch (question.IsActive)
                            {
                                case true:
                                    img = "Deactivate";
                                    break;
                                case false:
                                    img = "Activate";
                                    break;
                            }
                            <a href='@Url.Action("ToggleActivationPacker", new { questionId = question.Id })'>
                                @img
                            </a>
                        </td>
                        
                        <td>
                            @Html.ActionLink(question.Description, "DisplayPilot", new { questionId = question.Id })
                        </td>


                        @if (question.editableOrDeletable)
                        {
                            <td>
                                @Html.ActionLink("Edit", "EditPilot", new { questionId = question.Id })
                            </td>
                        }
                        else
                        {
                            <td>NOT EDITABLE</td>
                        }   
                        
                    </tr>
                }
            </tbody>

        </table>
    }
</div>


