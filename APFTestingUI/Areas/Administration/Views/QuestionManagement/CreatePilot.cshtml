@model APFTestingUI.Areas.Administration.Models.QuestionManagement.Create

@{
    ViewBag.Title = "CreatePilot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreatePilot</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Description) <em>*</em>
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Description)
    </div>
    <div class="clear"></div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Category) <em>*</em>
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.Category, Model.Categories, "--Select--")
    </div>
    <div class="clear"></div>
    
    <table>
        <thead>
            <tr>
                <th>Correct</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @{ const int answerCount = 2; }
            @for (int i = 0; i < answerCount; i++)
            {
                <tr>
                    <td>@Html.EditorFor(model => model.Answers[i].IsCorrect)</td>
                    <td>@Html.EditorFor(model => model.Answers[i].Description)</td>
                </tr>
            }
        </tbody>
    </table>
    
    <input type="submit" value="Create" class="form-button" />
}

