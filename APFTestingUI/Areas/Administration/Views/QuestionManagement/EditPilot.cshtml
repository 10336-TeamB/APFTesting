@model APFTestingUI.Areas.Administration.Models.QuestionManagement.Edit

@{
    ViewBag.Title = "EditPilot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditPilot</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    
    @Html.HiddenFor(model => model.Id);
    
    <div class="editor-label">
        @Html.LabelFor(model => model.IsActive) <em>*</em>
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.IsActive)
    </div>
    <div class="clear"></div>
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Description) <em>*</em>
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Description)
    </div>
    <div class="clear"></div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Category) <em>*</em>
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.Category, Model.Categories)
    </div>
    <div class="clear"></div>
    
    <div>
        @{ string path = String.Format("~/QuestionImages/{0}", Model.ImagePath); }
        <img src="@Url.Content(path)" alt="question image"/>
    </div>
    
    @Html.HiddenFor(model => model.ImagePath);
    
    <span id="add-answer">Add</span>
    <table id="answers-table">
        <thead>
            <tr>
                <th>Correct</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.Answers[i].Id)
                        @Html.EditorFor(model => model.Answers[i].IsCorrect)
                    </td>
                    <td>@Html.TextAreaFor(model => model.Answers[i].Description)</td>
                    <td class="delete-answer"><span>delete</span></td>
                </tr>
            }
        </tbody>
    </table>
    
    if (Model.editableOrDeletable)
    {
        @Html.ActionLink("Delete", "DeletePilot", new { questionId = Model.Id }, new { id = "delete" });
    }
    
    
    <input type="submit" value="Create" class="form-button" />
}

@section scripts
{
    <script src="~/Scripts/QuestionManagement.js"></script>
}
