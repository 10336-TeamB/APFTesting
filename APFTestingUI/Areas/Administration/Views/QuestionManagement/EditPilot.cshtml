@model APFTestingUI.Areas.Administration.Models.QuestionManagement.Edit

@{
    ViewBag.Title = "Edit Pilot Theory Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Question - Pilot</h1>

@using (Html.BeginForm("EditPilot", "QuestionManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false)
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(model => model.Id);
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Description)
    </div>
    <div class="clear"></div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Category)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.Category, Model.Categories)
    </div>
    <div class="clear"></div>
    
    <div>
        @{ string path = String.Format("~/QuestionImages/{0}", Model.ImagePath); }
        @if (Model.ImagePath != null)
        {
            <img src="@Url.Content(path)" alt="question image"/>
        }
        
        
    </div>
    
    <div class="editor-label">
        Image
    </div>
    <div class="editor-field">
        <input type="file" name="ImageFile" accept="image/*" />
    </div>
    <div class="clear"></div>
    @Html.HiddenFor(model => model.ImagePath);
    
    <div class="editor-label">
        @Html.LabelFor(model => model.DeleteImage)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.DeleteImage)
    </div>
    <div class="clear"></div>
    
    
    <table id="answers-table">
        <thead>
            <tr>
                <th>Correct</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.Answers[i].Id)
                        @Html.EditorFor(model => model.Answers[i].IsCorrect)
                    </td>
                    <td>@Html.EditorFor(model => model.Answers[i].Description)</td>
                    <td class="delete-answer"><span>delete</span></td>
                </tr>
            }
        </tbody>
    </table>
    <span id="add-answer">+ Add another answer</span><br/><br/>
    
    @Html.ActionLink("Cancel", "IndexPilot", new { }, new { @class="form-button" })
    <input type="submit" value="Create" class="form-button" />
}

@section scripts
{
    <script src="~/Scripts/QuestionManagement.js"></script>
}
