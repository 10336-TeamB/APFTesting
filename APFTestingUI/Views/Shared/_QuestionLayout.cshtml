@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <!--[if lt IE 9]>
        @Scripts.Render("~/Scripts/html5shiv.js")
        <![endif]-->
    @Scripts.Render("~/Scripts/modernizr.custom.51211.js")
</head>

<body>
    <div id="global-wrapper">

        <header id="header">
            <div class="size-wrapper">
                <div id="logo-area">
                    <a href="/">
                        <img src="~/Images/logo-apf.png" alt="Australian Parachute Federation" /></a>
                </div>
                <div class="right">
                    <div id="void-area">

                        <ul class="void-area-menu">
                            <li id="question-examiner-button"><span>Examiner</span>
                                <ul>
                                    <li>@Html.ActionLink("Void", "Void", "Exam", new { examId = ViewBag.ExamId }, new { id = "question-void-button", style = "display:none" })</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div id="content">
            <div class="size-wrapper">
                @RenderBody()
            </div>

        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/global.js")
    @RenderSection("scripts", required: false)

</body>
</html>
