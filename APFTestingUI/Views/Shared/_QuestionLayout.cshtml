<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,700,400italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Play:400,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    <!--[if lt IE 9]>
    @Scripts.Render("~/Scripts/html5shiv.js")
    <![endif]-->
    @Scripts.Render("~/Scripts/modernizr.custom.51211.js")
</head>
<body>
    <div id="global-wrapper">
        <header id="header">
            <div class="size-wrapper">
                <div id="logo-area">
                    <img src="~/Images/logo-apf.png" alt="Australian Parachute Federation" />
                </div>
                <div class="right">
                    <div id="void-area">

                        <ul class="void-area-menu">
                            <li id="question-examiner-button"><span>Examiner</span>
                                <ul>
                                    <li>@Html.ActionLink("Void", "Void", "Exam", new { examId = ViewBag.ExamId }, new { id = "question-void-button", style = "display:none" })</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <div class="gradient-wrapper">
            <div id="content">
                <div class="size-wrapper">
                    @RenderBody()
                    <div id="error-message"></div>
                </div>
            </div>
            <footer id="footer">
                <div class="size-wrapper">
                    <p id="copy">&copy; 2013 Australian Parachute Federation</p>
                    <div class="clear"></div>
                </div>
            </footer>
        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/global.js")
    @Scripts.Render("~/Scripts/jquery.colorbox-min.js")
    @RenderSection("scripts", required: false)

</body>
</html>
