@model APFTestingUI.Models.CompletedExam.ExamDetailsPilot

@{
    ViewBag.Title = "Pilot Exam Summary";
}

<h2>Pilot Exam Summary</h2>

<fieldset>
    <legend>Pilot Details</legend>
    @Html.HiddenFor(m => m.ExamId)

    <div class="display-label">
         @Html.DisplayNameFor(model => model.ARN):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ARN)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.FirstName):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FirstName)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.LastName):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LastName)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Address):
    </div>
    <div class="display-field">
        @Html.Raw(Model.Address.ToHtmlString())
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Email):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Mobile):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Mobile)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Phone):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Phone)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.DOB):
    </div>
    <div class="display-field">
        @String.Format("{0:dd MMMM yyyy}", Model.DOB)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.LicenseType):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LicenseType)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.PilotMedical):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PilotMedical)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.MedicalExpiryDate):
    </div>
    <div class="display-field">
        @String.Format("{0:dd MMMM yyyy}", Model.MedicalExpiryDate)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.HasInstrumentRating):
    </div>
    <div class="display-field">
        @if (@Model.HasInstrumentRating)
        {
            @:Yes
        }
        else
        {
            @:No
        }
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.HasValidBRF):
    </div>
    <div class="display-field">
        @if (@Model.HasValidBRF)
        {
            @:Yes
        }
        else
        {
            @:No
        }
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.TheoryScore):
    </div>
    <div class="display-field">
        @String.Format("{0:N0}%", Model.TheoryScore * 100)
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.HasPassedTheory):
    </div>
    <div class="display-field">
        @if (@Model.HasPassedTheory)
        {
            @:Yes
        }
        else
        {
            @:No
        }
    </div>
    <div class="clear"></div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.HasPassedPractical):
    </div>
    <div class="display-field">
        @if (@Model.HasPassedPractical)
        {
            @:Yes
        }
        else
        {
            @:No
        }
    </div>
    <div class="clear"></div>

</fieldset>
<p class="button-container">
    @Html.ActionLink("Cancel", "Index", "Examiner", new {}, new { @class="examiner-button"})
    @Html.ActionLink("Submit", "SubmitPilotExamResults", new { examId = Model.ExamId }, new { @class="examiner-button"})
</p>
