            </td>
            <td class="start-theory-link">
                @if (!candidate.TheoryComponentInProgress)
                {
                    
                    @Html.ActionLink("Start Theory Exam", "Start", "Exam", new { candidateId = candidate.Id }, new { @class = "link-button" });
                    
                }
