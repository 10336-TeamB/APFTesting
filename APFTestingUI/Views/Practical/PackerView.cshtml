@model APFTestingUI.Models.Practical.PackerView

@{
    ViewBag.Title = "Demonstrated Packs";
}

<h2>Demonstrated Packs</h2>

<table id="tbl-demonstrated-packs">
    <thead>
        <tr>
            <th class="th-date">Date</th>
            <th class="th-canopy-type">Canopy Type</th>
            <th class="th-canopy-serial-no">Canopy Serial No.</th>
            <th class="th-harness-type">Harness / Container Type</th>
            <th class="th-harness-serial-no">Harness / Container Serial No.</th>
            <th class="th-notes">Notes</th>
            <th class="th-instructor-no">Instructor / Rigger No.</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@{
    var rowCounter = 0;
    var rowStyle = rowCounter % 2 == 0 ? "row-even" : "row-odd";
}
@foreach (var p in Model.Packs)
{
    <tr class="@rowStyle">
        <td>@p.Date</td>
        <td>@p.CanopyType</td>
        <td>@p.CanopyTypeSerialNumber</td>
        <td>@p.HarnessContainerType</td>
        <td>@p.HarnessContainerSerialNumber</td>
        <td>@p.Note</td>
        <td>@p.SupervisorId</td>
        <td>@Html.ActionLink("Edit", "PackerEdit", new { taskId = @p.Id, examId = @Model.ExamId }, new { @class = "examinerButton" })</td>
    </tr>
    rowCounter++;
}
    </tbody>
</table>

<p>
    @Html.ActionLink("Add", "PackerInput", new { examId = @Model.ExamId }, new { @class = "examinerButton" })
</p>
